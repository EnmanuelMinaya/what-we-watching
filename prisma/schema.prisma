generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// schema.prisma

// Define the User entity
model User {
  id          Int       @id @default(autoincrement())
  username    String    @unique
  email       String    @unique
  password    String
  dateCreated   DateTime  @default(now())
  profilePic  String?
  registrationDate DateTime @default(now())
  watchlist   Watchlist[]
  followedBy User[]  @relation("UserFollows")
  following  User[]  @relation("UserFollows")
}

// Define the TV Show entity
model TVShow {
  id            Int      @id @default(autoincrement())
  title         String
  description   String
  genre         String
  releaseDate   DateTime
  numSeasons    Int
  averageRating Float

  // Define the Watchlist relationship
  watchlist Watchlist[]
}

// Define the Watchlist entity
model Watchlist {
  id            Int       @id @default(autoincrement())
  status        String
  lastWatchedEpisode Int
  dateAdded     DateTime  @default(now())
  // Define the User foreign key
  user          User      @relation(fields: [userId], references: [id])
  userId        Int
  // Define the TVShow foreign key
  tvShow        TVShow    @relation(fields: [showId], references: [id])
  showId        Int
}


