generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int         @id @default(autoincrement())
  name             String
  email            String      @unique
  password         String
  profilePic       String?
  registrationDate DateTime    @default(now())
  watchlist        Watchlist[]
  followedBy       User[]      @relation("UserFollows")
  following        User[]      @relation("UserFollows")
}

model Show {
  id            Int         @id @default(autoincrement())
  title         String
  description   String
  genre         String
  releaseDate   DateTime
  numSeasons    Int
  averageRating Float
  watchlist     Watchlist[]
}

model Watchlist {
  id           Int      @id @default(autoincrement())
  name         String
  visibility   String
  creationDate DateTime @default(now())
  user         User[]
  Show         Show[]
}
