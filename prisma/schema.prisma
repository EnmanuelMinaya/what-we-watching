generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int        @id @default(autoincrement())
  name             String
  email            String     @unique
  password         String
  profilePic       String?
  registrationDate DateTime   @default(now())
  showLists        ShowList[]
  followedBy       User[]     @relation("UserFollows")
  following        User[]     @relation("UserFollows")
}

model Show {
  id            Int        @id @default(autoincrement())
  api_id        Int
  title         String
  profile_path  String
  description   String
  genre         String
  releaseDate   DateTime
  numSeasons    Int
  averageRating Float
  showList      ShowList[]
}

model ShowList {
  id           Int      @id @default(autoincrement())
  name         String
  visibility   String
  creationDate DateTime @default(now())
  author       User     @relation(fields: [authorId], references: [id])
  authorId     Int
  Show         Show[]
}
